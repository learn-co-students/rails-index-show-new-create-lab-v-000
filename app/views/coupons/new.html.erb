<h3>Coupon Form</h3>

<%= form_tag coupon_path %>
	<label>Coupon Code: </label><br>
	<%= text_field_tag :coupon_code %><br>

	<label>Coupon for Store:</label>
	<%= text_field_tag :store %><br>

	<%= hidden_field_tag :authenticity_token, form_authenticity_token %>

	<% submit_tag "Submit Coupon" %>

 <% end%>

<!-- use form_tag, wire to the create action in the controller, creates a new record in the coupons table w/params passed through the form -->