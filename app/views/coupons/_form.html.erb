<h1>Coupon Form</h1>

<%= form_tag coupons_path do %>

    <label>Coupon Code: </label><br>
    <%= text_field_tag 'coupon[coupon_code]', nil, :placeholder => 'Enter coupon code here' %>

    <br><br>

    <label>Store: </label><br>
    <%= text_field_tag 'coupon[store]', nil, :placeholder => 'Enter store here' %>

    <br><br>

    <%= submit_tag "Submit Coupon" %>
  <% end %>
