<h1>Coupon Form</h1>

<%= form_tag coupon_path(@path), method: "put" do %> <!-- same as updating with /coupon/:id in Sinatra; specify PUT or defaults to POST -->
  <label>Coupon Code:</label><br>
  <%= text_field_tag :coupon_code, @coupon.coupon_code %><br>
 
  <label>Store:</label><br>
  <%= text_area_tag :store @coupon.store %></textarea><br>
 
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= submit_tag "Submit Coupon" %>
<% end %>